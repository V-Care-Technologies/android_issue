<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/head"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_district"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/inter_medium"
        android:text="Select District"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text"
        app:layout_goneMarginTop="@dimen/_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/spinner_district"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_background_border"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_margin_half_half"
        app:layout_constraintStart_toStartOf="@id/tv_title_district"
        app:layout_constraintEnd_toEndOf="@id/tv_title_district"
        app:layout_constraintTop_toBottomOf="@id/tv_title_district" />


    <ImageView
        android:id="@+id/spinner_drop_down_district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_margin_20"
        android:src="@drawable/ic_drop_down"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/spinner_district"
        app:layout_constraintEnd_toEndOf="@id/spinner_district"
        app:layout_constraintTop_toTopOf="@id/spinner_district" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_block"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/inter_medium"
        android:text="Select Block"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text"
        app:layout_goneMarginTop="@dimen/_margin"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_district"
        />
    <Spinner
        android:id="@+id/spinner_block"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/_margin_half_half"
        android:background="@drawable/ic_background_border"
        android:backgroundTint="@color/white"
        android:visibility="visible"

        app:layout_constraintStart_toStartOf="@id/tv_title_block"
        app:layout_constraintEnd_toEndOf="@id/tv_title_block"
        app:layout_constraintTop_toBottomOf="@id/tv_title_block" />


    <ImageView
        android:id="@+id/spinner_drop_down_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_margin_20"
        android:src="@drawable/ic_drop_down"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="@id/spinner_block"
        app:layout_constraintEnd_toEndOf="@id/spinner_block"
        app:layout_constraintTop_toTopOf="@id/spinner_block" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_panchayat"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/inter_medium"
        android:text="Select Panchayat"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text"
        app:layout_goneMarginTop="@dimen/_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_block"
        />
    <Spinner
        android:id="@+id/spinner_panchayat"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/_margin_half_half"
        android:background="@drawable/ic_background_border"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/tv_title_block"
        app:layout_constraintEnd_toEndOf="@id/tv_title_block"
        app:layout_constraintTop_toBottomOf="@id/tv_title_panchayat" />


    <ImageView
        android:id="@+id/spinner_drop_down_panchayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_margin_20"
        android:src="@drawable/ic_drop_down"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="@id/spinner_panchayat"
        app:layout_constraintEnd_toEndOf="@id/spinner_panchayat"
        app:layout_constraintTop_toTopOf="@id/spinner_panchayat" />


</androidx.constraintlayout.widget.ConstraintLayout>